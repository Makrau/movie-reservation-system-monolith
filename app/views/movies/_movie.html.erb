<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Poster image url:</strong>
    <%= movie.poster_image_url %>
  </p>

  <p>
    <strong>Gêneros:</strong>
    <% if movie.genres.any? %>
      <%= movie.genres.map(&:name).join(", ") %>
    <% else %>
      <span class="text-gray-500">Nenhum gênero associado</span>
    <% end %>
  </p>

</div>
