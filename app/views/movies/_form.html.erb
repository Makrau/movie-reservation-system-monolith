<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, "Título", style: "display: block", class: "mb-1" %>
    <%= form.text_field :title, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Descrição", style: "display: block", class: "mb-1" %>
    <%= form.text_area :description, class: "w-full p-2 border rounded", rows: 3 %>
  </div>

  <div class="mb-4">
    <%= form.label :poster_image_url, "URL da Imagem do Poster", style: "display: block", class: "mb-1" %>
    <%= form.text_field :poster_image_url, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :genre_ids, "Gêneros", style: "display: block", class: "mb-1" %>
    <div class="text-sm text-gray-600 mb-1">Segure Ctrl (Cmd no Mac) para selecionar múltiplos gêneros</div>
    <%= form.collection_select :genre_ids,
                             @genres,
                             :id,
                             :name,
                             {},
                             {
                               multiple: true,
                               data: { controller: "genre-select" },
                             } %>
  </div>

  <div>
    <%= form.submit "Salvar", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
<% end %>
